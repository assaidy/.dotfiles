{
    // "layer": "top", // Waybar at top layer
    "position": "top",
    "output": "",
    "spacing": 4, // Gaps between modules (px)
    "modules-left": ["hyprland/workspaces", "hyprland/window", "hyprland/mode", "hyprland/scratchpad"],
    "modules-center": ["custom/window-count", "clock", "idle_inhibitor"],
    "modules-right": ["battery", "memory", "cpu", "temperature", "pulseaudio", "backlight", "hyprland/language", "tray"],
    "hyprland/workspaces": {
        "all-outputs": false,
        "disable-scroll": false,
        "warp-on-scroll": false,
        "format": "{name}",
        "active": "",
        "default": "",
    },
    "hyprland/window": {  
        "format": "{}",
        "separate-outputs": true,
    },
    "hyprland/language": {  
        "format": "{short}",
    },
    "tray": {
        "icon-size": 20,
        "spacing": 2
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": " {:%a-%d-%m   %I:%M}",
        //"format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },
    "memory": {
        "format": "{used} ({percentage}%) "
    },
    "disk": {
        "path": "/",
        "format": "💾 {used} ({percentage_used}%)",
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "interval": 5,
        "critical-threshold": 80,
        "format": "{temperatureC}°C {icon}",
        "format-icons": [""]
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}  {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon} ",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "custom/window-count": {
        "format": "# {}",
        "interval": 1,
        "escape": true,
        "exec": "hyprctl activeworkspace | grep 'windows:' | awk '{print $2}' | head -n 1 | tr -d '\n' | xargs echo",
    }
}
