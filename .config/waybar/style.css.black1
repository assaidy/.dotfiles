* {
    border: none;
    font-family: "JetBrains Mono", "FontAwesome";
    font-size: 14px;
    font-weight: bold;
    min-height: 0;
}

window#waybar {
    color: #ffffff; /* White text */
    background: rgba(0, 0, 0, 1); /* Dark black background with more opacity */
    padding: 5px;
    /* border-radius: 10px; */
    border: 1px solid #333333; /* Slight border for window */
}

#workspaces button {
    padding: 3px 6px;
    border-radius: 5px;
    color: #ffffff;
}

#workspaces button.active {
    color: #ffffff; /* White text for active workspace */
    font-weight: 600;
    background: #444444; /* Darker background for active workspace */
    border-radius: 5px;
}

#workspaces button:hover {
    color: #ffffff; /* White text on hover */
    background: #555555; /* Dark gray background on hover */
    border-radius: 5px;
}

#window,
#cpu,
#memory,
#clock,
#battery,
#pulseaudio,
#network,
#language,
#backlight,
#tray,
#temperature,
#workspaces,
#idle_inhibitor,
#backlight {
    padding: 2px 10px;
    margin: 4px 2px;
    border: 0px;
    background: rgba(0, 0, 0, 0.8); /* Dark black background for modules */
    border-radius: 5px;
    color: #ffffff; /* White text for modules */
}

#window {
    font-style: italic;
    color: #ffffff; /* White text for window title */
}

#idle_inhibitor,
#battery,
#backlight {
    padding-right: 12px;
}

#clock {
    font-weight: 700;
    color: #ffffff; /* White text for clock */
}

#cpu {
    color: #ffffff; /* White text for CPU */
}

#memory {
    color: #ffffff; /* White text for Memory */
}

#pulseaudio {
    color: #ffffff; /* White text for Pulseaudio */
}

#network {
    color: #ffffff; /* White text for Network */
}

#temperature {
    color: #ffffff; /* White text for Temperature */
}

#tray {
    background: rgba(0, 0, 0, 0.7);
    border-radius: 5px;
    padding: 2px;
}

#backlight {
    color: #ffffff; /* White text for Backlight */
}
