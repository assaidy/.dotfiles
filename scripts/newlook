#!/bin/bash

# Directory containing wallpapers
DIR="$HOME/Pictures/walls"

# Select a random file from the directory
WALLPAPER=$(ls $DIR | shuf -n 1)

# Set the selected file as the wallpaper
feh --bg-fill $DIR/$WALLPAPER
# swww img $DIR/$WALLPAPER

# set pywal
# wal -i $DIR/$WALLPAPER
# xdotool key super+F5
